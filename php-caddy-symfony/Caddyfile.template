0.0.0.0:80

root * ${WEBDIR}

# Point all PHP requests to an upstream socket, served by php-fpm
php_fastcgi 127.0.0.1:9000

# Enable logging
log {
	output stderr
	format console
	level  ERROR
}

log {
	output discard
	level  INFO
}

# Serve static files
file_server

# Enable gzip compression (and zstd)
encode zstd gzip
